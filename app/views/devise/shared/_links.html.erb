<%- if controller_name != 'sessions' %>
  <%= link_to I18n.translate("devise.shared.links.login"), new_session_path(resource_name), class: "btnlink" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to I18n.translate("devise.shared.links.signup"), new_registration_path(resource_name), class: "btnlink" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to I18n.translate("devise.shared.links.forgot"), new_password_path(resource_name), class: "btnlink" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to I18n.translate("devise.shared.links.confirmation"), new_confirmation_path(resource_name), class: "btnlink" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to I18n.translate("devise.shared.links.unlock"), new_unlock_path(resource_name), class: "btnlink" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to I18n.translate("devise.shared.links.with") + OmniAuth::Utils.camelize(provider), omniauth_authorize_path(resource_name, provider), class: "btnlink" %><br />
  <% end %>
<% end %>
