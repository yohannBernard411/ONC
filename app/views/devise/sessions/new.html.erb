  <h1><%= I18n.translate("devise.sessions.login") %></h1>

  <div class="container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password, label: I18n.translate("devise.sessions.password"),
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: I18n.translate("devise.sessions.remember"),
         as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.submit I18n.translate("devise.sessions.login"), class: "btnlink btn-green" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
